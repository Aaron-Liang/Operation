@model IEnumerable<Operation.Models.ViewModels.MoneyTemplateListViewModels>
@{
    var i = 0;
}

<table id="ContentList" class="table table-bordered table-striped table-hover">
    <thead class="bg-primary">
    <tr>
        <th width="10%">#</th>
        <th width="30%">類別</th>
        <th width="30%">日期</th>
        <th width="30%">金額</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td width="10%">@(++i)</td>
            <td width="30%">@item.Category</td>
            <td width="30%">@item.Date.ToString("yyyy-MM-dd")</td>
            <td width="30%">@item.Money.ToString("N0")</td>
        </tr>
    }

    </tbody>
</table>

